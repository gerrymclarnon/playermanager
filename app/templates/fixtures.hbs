{{#nav-bar showMenu=controllers.application.showMenu}}
  <a class="icon icon-bars pull-left" {{action 'showMenu'}}></a>
  <a class="icon icon-plus pull-right" {{action 'addFixture'}}></a>
  <h1 class="title">Matches</h1>
{{/nav-bar}}

{{#secondary-header-bar showMenu=controllers.application.showMenu}}
  <form>
    {{input type="search" name="firstName" placeholder="Search" value=controller.filter}}
  </form>
{{/secondary-header-bar}}

{{#main-content showMenu=controllers.application.showMenu}}
  <ul class="table-view">
      {{#each controller.filteredContent as |fixture|}}
        <li class="table-view-cell media">
            {{#link-to "fixture" fixture class="navigate-right"}}
              <div class="media-body">
                  {{fixture.homeTeam}} {{fixture.homeTeamGoals}} - {{fixture.awayTeamGoals}} {{fixture.awayTeam}}
                  <p>{{fixture.date}}</p>
              </div>
            {{/link-to}}
        </li>
      {{/each}}
  </ul>
{{/main-content}}
